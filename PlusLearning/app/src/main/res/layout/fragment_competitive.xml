<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_info.AcademicFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gainsboro"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_8"
                android:weightSum="10">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1.5"
                    android:src="@drawable/bg"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="0.2dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Raju Joshi"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Class - 11"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Course - Board + JEE-Main"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Position" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/tv_rank"
                    android:layout_weight="1.5"
                    android:background="@drawable/bg_white"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="32sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/sp_testtype"

            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_8"
            android:background="@color/white"
             />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_8"
            android:orientation="horizontal"
            android:id="@+id/rv_subjects">

        </android.support.v7.widget.RecyclerView>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_8"
            android:id="@+id/rg_sujgroup"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="4">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/rb_all"
                android:layout_weight="0.8"
                android:text="All" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/rb_physics"
                android:text="Physics" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:id="@+id/rb_chemistry"
                android:text="Chemistry" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/rb_maths"
                android:layout_weight="1"
                android:text="Maths" />

        </RadioGroup>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_graph_compet"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="240dp"
            android:layout_margin="@dimen/margin_8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Question Attempt = 85%"
            android:textSize="13sp"
            android:padding="@dimen/margin_4"
            android:background="@color/white"
            android:layout_margin="@dimen/margin_8"
            android:gravity="center"/>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>